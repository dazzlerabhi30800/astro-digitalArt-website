---
import art1 from "/art1.jpg";
import art2 from "/art2.jpg";
import art3 from "/art3.jpg";
import art4 from "/art4.jpg";

const imgData = [art1, art2, art3, art4];
---

<div class="mx-12 py-4">
  <h1 class="my-16 text-center text-2xl uppercase font-bold">
    Latest Art Pieces
  </h1>
  <div class="grid grid-cols-1 gap-10 md:grid-cols-2 md:mx-48 md:gap-14">
    {
      imgData.map((item) => {
        return (
          <div class="relative group">
            <img
              src={item}
              class="relative w-full z-10 rounded-sm group-hover:-translate-x-3 transition-all"
              alt="painting"
            />
            <div class="absolute left-0 top-0 w-full rounded-sm h-full bg-black/75 group-hover:translate-x-3 transition-all" />
          </div>
        );
      })
    }
  </div>
</div>
